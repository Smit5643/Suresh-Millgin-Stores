{
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/((?!icon|manifest|sw|pwabuilder|assetlinks|.well-known).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" },
        { "key": "Pragma", "value": "no-cache" },
        { "key": "Expires", "value": "0" }
      ]
    }
  ]
}